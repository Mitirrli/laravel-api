{
    "name": "mitirrli/laravel-api",
    "type": "project",
    "description": "Laravel Framework For API.",
    "license": "MIT",
    "support": {
        "source": "https://github.com/mitirrli/laravel-api",
        "issues": "https://github.com/mitirrli/laravel-api/issues"
    },
    "keywords": [
        "laravel",
        "octane",
        "redis",
        "cool"
    ],
    "require": {
        "php": "^7.3|^8.0",
        "alibabacloud/sdk": "^1.8",
        "appstract/laravel-opcache": "^4.0",
        "barryvdh/laravel-ide-helper": "^2.10",
        "brainmaestro/composer-git-hooks": "^2.8",
        "fideloper/proxy": "^4.4",
        "firebase/php-jwt": "^5.3",
        "fruitcake/laravel-cors": "^2.0",
        "genealabs/laravel-model-caching": "^0.11.3",
        "guzzlehttp/guzzle": "^7.0.1",
        "laravel/framework": "^8.40",
        "laravel/horizon": "^5.7",
        "laravel/octane": "^1.0",
        "laravel/scout": "^9.1",
        "matchish/laravel-scout-elasticsearch": "^5.0",
        "mll-lab/laravel-graphql-playground": "^2.5",
        "nuwave/lighthouse": "^5.12",
        "thecodingmachine/phpstan-safe-rule": "^1.0",
        "watson/validating": "^6.1",
        "werk365/etagconditionals": "^1.2",
        "wikimedia/composer-merge-plugin": "dev-master",
        "wujunze/dingtalk-exception": "^1.1"
    },
    "require-dev": {
        "doctrine/dbal": "^3.1",
        "ekino/phpstan-banned-code": "^0.4.0",
        "facade/ignition": "^2.10",
        "fakerphp/faker": "^1.9.1",
        "friendsofphp/php-cs-fixer": "^2.16.7",
        "laravel/sail": "^1.7",
        "laravel/telescope": "^4.4",
        "laravel/tinker": "^2.6",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^5.4",
        "nunomaduro/larastan": "^0.7.6",
        "phpstan/phpstan-deprecation-rules": "^0.12.6",
        "phpstan/phpstan-mockery": "^0.12.13",
        "phpunit/phpunit": "^9.3.3",
        "vimeo/psalm": "^4.7"
    },
    "suggest": {
        "ext-redis": "For better performance. ",
        "monolog/monolog": "Allows more advanced logging of the application flow. "
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-update-cmd": [
            "cghooks update",
            "@php artisan horizon:publish --ansi"
        ],
        "post-merge": "composer install",
        "post-install-cmd": [
            "cghooks add --ignore-lock",
            "cghooks update"
        ],
        "update-project": [
            "git pull",
            "git submodule init",
            "git submodule update",
            "@php artisan route:clear",
            "@php artisan ide-helper:models -N",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta",
            "@php artisan lighthouse:ide-helper"
        ],
        "markdown": [
            "rm -rf markdown",
            "chmod a+x dump.sh",
            "./dump.sh"
        ],
        "serve": "docker exec -it laravel-api php -S 0.0.0.0:8000 -t public",
        "octane": "docker exec -it laravel-api php artisan octane:start --host=0.0.0.0 --watch",
        "deploy": [
            "composer install --optimize-autoloader --no-dev",
            "@php artisan lighthouse:clear-cache",
            "@php artisan lighthouse:cache",
            "@php artisan config:cache",
            "@php artisan route:cache",
            "@php artisan event:cache",
            "@php artisan view:cache"
        ],
        "cghooks": "vendor/bin/cghooks",
        "check-style": "docker exec laravel-api vendor/bin/php-cs-fixer fix --using-cache=no --diff --config=.php_cs --dry-run --ansi",
        "cs-fix": "docker exec laravel-api vendor/bin/php-cs-fixer fix --using-cache=no --config=.php_cs --ansi",
        "test": "docker exec laravel-api vendor/bin/phpunit --colors=always --testdox -vvv",
        "stan": "docker exec laravel-api vendor/bin/phpstan analyse -c phpstan.neon --memory-limit=2G --verbose",
        "psalm": "docker exec laravel-api vendor/bin/psalm --show-info=true"
    },
    "scripts-descriptions": {
        "test": "Run all tests.",
        "check-style": "Run style checks (only dry run - no fixing!).",
        "fix-style": "Run style checks and fix violations."
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/sail",
                "laravel/tinker",
                "facade/ignition",
                "laravel/telescope",
                "nunomaduro/collision",
                "mll-lab/laravel-graphql-playground"
            ]
        },
        "merge-plugin": {
            "include": [
                "repository.json"
            ],
            "recurse": true,
            "replace": false,
            "ignore-duplicates": false,
            "merge-dev": true,
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": false
        },
        "hooks": {
            "config": {
                "stop-on-failure": [
                    "pre-commit",
                    "pre-push"
                ]
            },
            "pre-commit": [
                "composer test",
                "composer cs-fix",
                "composer psalm",
                "composer stan"
            ],
            "pre-push": [
                "composer test",
                "php tool/phpcpd.phar --fuzzy app package",
                "php tool/phploc.phar app package"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "secure-http": false
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
