<?xml version="1.0"?>
<psalm
    errorLevel="3"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="app" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="app/Exceptions" />
            <directory name="app/Providers" />
            <directory name="app/Traits" />
            <directory name="app/Http/Controllers" />
            <directory name="app/Http/Middleware" />
            <file name="app/Models/BaseModel.php" />
        </ignoreFiles>
    </projectFiles>

    <projectFiles>
        <directory name="package" />
    </projectFiles>
</psalm>
